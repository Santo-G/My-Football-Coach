<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_item_imageview_constraint"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/player_inner_cardview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/player_rounded_thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="4dp" />

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/player_item_textview_constraint"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintStart_toEndOf="@id/player_inner_cardview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/player_inner_cardview"
            app:layout_constraintBottom_toBottomOf="@id/player_inner_cardview">

            <TextView
                android:id="@+id/player_full_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99141414"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="24sp"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
